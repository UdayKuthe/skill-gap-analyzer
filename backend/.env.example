# Database Configuration
DATABASE_URL=mysql://username:password@localhost:3306/skill_gap_analyzer
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=skill_gap_analyzer
DATABASE_USER=your_mysql_user
DATABASE_PASSWORD=your_mysql_password

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=43200

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=True
ENVIRONMENT=development

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,docx,doc,txt

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# ML Model Configuration
SPACY_MODEL=en_core_web_sm
SBERT_MODEL=all-MiniLM-L6-v2
SKILL_SIMILARITY_THRESHOLD=0.7
MODEL_CACHE_DIR=models/cache

# External Course APIs (Optional)
COURSERA_API_KEY=your-coursera-api-key
UDEMY_API_KEY=your-udemy-api-key
EDX_API_KEY=your-edx-api-key
LINKEDIN_LEARNING_API_KEY=your-linkedin-learning-api-key

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration (Optional - for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Email Configuration (Optional - for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@skillgapanalyzer.com

# Security Settings
SECRET_KEY=your-application-secret-key
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Monitoring and Analytics (Optional)
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Development/Testing
TESTING=False
TEST_DATABASE_URL=mysql://test_user:test_password@localhost:3306/test_skill_gap_analyzer
